{
    "extends": "tslint:recommended",
    "rules": {
      "ordered-imports": [
        false
      ],
      "quotemark": [
        true,
        "single",
        "jsx-single",
        "avoid-escape"
      ],
      "semicolon": [
        true,
        "never"
      ],
      "member-access": [
        false
      ],
      "member-ordering": [
        false
      ],
      "trailing-comma": [
        false
      ],
      "no-empty": false,
      "no-submodule-imports": false,
      "no-implicit-dependencies": false,
      "no-constant-condition": false,
      "triple-equals": [
        true,
        "allow-undefined-check"
      ],
      "no-duplicate-imports": false,
      "max-classes-per-file": [
        false
      ]
    }
  }